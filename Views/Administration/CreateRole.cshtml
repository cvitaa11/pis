@model CreateRoleVM
@{ 
    ViewBag.Title = "Create role";
}
<h1 class="ml-3">Create role</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="col-md-4 form-group">
                <label class="form-check-label" asp-for="RoleName">Role name</label>
                <input class="form-control" type="text" asp-for="RoleName" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary ml-3">Create</button>
        </form>
    </div>
</div>