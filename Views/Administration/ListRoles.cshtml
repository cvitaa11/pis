@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All roles";
}
<h1 class="ml-2">All roles</h1>
@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-controller="Administration" asp-action="CreateRole" style="width: auto">
    Add new role
    </a>    
    @foreach (var role in Model)
    {
        <div class="card">
            <div class="card-header">
                Role ID: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">Role name: @role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-outline-warning">Edit</a>
                <a href="#" class="btn btn-outline-danger">Delete</a>
            </div>
        </div>
    }
}
else
{<div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                No roles created!
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create one.
                </h5>
                <a class="btn btn-primary"
                   asp-controller="Administration" asp-action="CreateRole">
                    Create role
                </a>
            </div>
        </div>
    </div>
}