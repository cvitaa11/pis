@{
    ViewBag.Title = "Reservation";
}
<div class="row mt-4 mb-4 py-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Reservation</h1>
            </div>
            <div class="card-body">
                <form id="reservation">
                    <div class="form-group">
                        <label class="form-check-label">First name:</label>
                        <input type="text" class="form-control" placeholder="First name" />
                    </div>
                    <div class="form-group">
                        <label class="form-check-label">Last name:</label>
                        <input type="text" class="form-control" placeholder="Last name" />
                    </div>     
                    <div class="form-group">
                        <label class="form-check-label">Date:</label>
                        <input id="date" type="text" class="form-control" placeholder="Date" autocomplete="off" />
                    </div>  
                    <div class="form-group">
                        <label class="form-check-label">Meal:</label>
                        <select class="form-control">
                            <option selected disabled>Choose your meal</option>
                            <option>Breakfast</option>
                            <option>Lunch</option>
                            <option>Dinner</option>
                        </select>
                    </div>
                    <button class="btn btn-primary float-right">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <img src="~/img/reservation.jpg" class="img-thumbnail img-fluid" />
    </div>
</div>
<script>
    $(function () {
        $('#date').datepicker();
    });
</script>